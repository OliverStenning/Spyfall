<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape  android:shape="rectangle">
            <solid android:color="@color/colorAccent"/>
            <corners android:bottomRightRadius="0dp" android:topRightRadius="0dp" android:topLeftRadius="4dp" android:bottomLeftRadius="4dp"/>
            <stroke android:width="2px" android:color="@color/colorText"/>
        </shape>
    </item>
    <item>
        <shape  android:shape="rectangle">
            <corners android:bottomRightRadius="0dp" android:topRightRadius="0dp" android:topLeftRadius="4dp" android:bottomLeftRadius="4dp"/>
            <stroke android:width="2px" android:color="@color/colorText"/>
        </shape>
    </item>
</selector>